 <div class="container">

  <h5 class="col-2 offset-2 my-4 mr-2"><span class="px-3" style="background-color: #dcdcdc">注文履歴一覧</span></h5>
    <div class=" row d-flex justify-content-center">
      <table class="table col-8">

        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>

            <tr>

              <td>
                <%= link_to admin_order_path(order.id), class: "text-dark" do %>
                  <%= order.created_at.strftime('%Y/%m/%d  %H:%M:%S') %>
                <% end %>
              </td>
              <td><%= order.customer.name_display %></td>

              <td>
                <%= order.order_details.sum(:amount) %>
              </td>

              <td><%= order.status_i18n %></td>

            </tr>

          <% end %>

        </tbody>
      </table>
    </div>
    <div class="row d-flex justify-content-center">
      <%= paginate @orders %>
    </div>
  </div>
