<div class="container">
  <h5 class="col-3 offset-1 mt-4 mb-5"><span class="px-3" style="background-color: #dcdcdc">商品詳細</span></h5>
  <div class="row mt-5 mb-5 d-flex justify-content-center">
    <div class="col-3">
      <%= image_tag @item.image, size: "225x175" %>
    </div>

    <div class="col-7">
      <div class="row ml-3 ">
        <div class="col-3">
          <p class="mb-3 mr-2"><span>商品名</span></p>
        </div>
        <div class="col-7">
          <%= @item.name %>
        </div>
      </div>

      <div class="row ml-3 ">
        <div class="col-3">
          <p class="mb-3 mr-2"><span>商品説明</span></p>
        </div>
        <div class="col-7">
          <%= @item.introduction %>
        </div>
      </div>

      <div class="row ml-3 ">
        <div class="col-3">
          <p class="mb-3 mr-2"><span>ジャンル</span></p>
        </div>
        <div class="col-7">
         <%= @item.genre.name %>
        </div>
      </div>

      <div class="row ml-3 ">
        <div class="col-3">
          <p class="mb-3 mr-2"><span>税込価格<br>(税抜価格)</span></p>
        </div>
        <div class="col-7">
          <strong><%= @item.price.to_s(:delimited) %>（<%= @item.with_tax_price.to_s(:delimited) %>）円</strong>
        </div>
      </div>

      <div class="row ml-3 ">
        <div class="col-3">
          <p class="mb-3 mr-2"><span>販売ステータス</span></p>
        </div>
        <div class="col-7">
          <% if @item.is_active == true %>
            <p><strong class="text-success">販売中</strong></p>
          <% else %>
            <p><strong class="text-success">販売停止中</strong></p>
          <% end %>
        </div>
      </div>
    </div>

      <% if admin_signed_in? %>

      <% end %>
  </div>

  <div class="row d-flex justify-content-center">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success col-2"%>
  </div>
</div>