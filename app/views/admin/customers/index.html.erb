<div class="container">
  <h5 class="col-3 offset-1 my-4"><span class="px-3" style="background-color: #dcdcdc">会員一覧</span></h5>

    <div class="row justify-content-center">
      <table class="table col-8">

        <thead class="table-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>

        </thead>

        <tbody>

          <% @customers.each do |customers| %>
            <tr>
              <td><%= customers.id %></td>

                <td class="col-5">
                  <%= link_to admin_customer_path(customers.id), class: "text-dark border-buttom" do %>
                    <%= customers.first_name %><%= customers.last_name %>
                  <% end %>
                </td>

              <td><%= customers.email %></td>

              <% if customers.is_deleted == false%>
                <td class="text-success"><strong>有効</strong></td>
              <% else %>
                <td class="text-secondary"><strong　style="opacity: 0.8">退会</strong></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
</div>
