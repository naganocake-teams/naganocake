<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h1>

<table>

  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>

  <tr>
    <td>氏名</td>
    <td><%= @customer.first_name %><%= @customer.last_name %></td>
  </tr>

  <tr>
    <td>フリガナ</td>
    <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
  </tr>

  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>

  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>

  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>

  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>

  <tr>
    <td>会員ステータス</td>
      <% if @customer.is_deleted == false %>
        <td>
          有効
        </td>
      <% else %>
        <td>
          退会
        </td>
      <% end %>
  </tr>
</table>

<%= link_to edit_admin_customer_path(@customer.id) do %>
  <button>編集する</button>
<% end %>


