<div class="container">
  <h6 class=" offset-1 my-4"><strong class="px-3" style="background-color: #dcdcdc">マイページ</strong></h6>

    <div class="row ml-2 align-items-center mb-3">
      <p class="mb-0"><strong>登録情報</strong></label>
      <div class="col p-2">
        <%= link_to "編集する", edit_infomation_path, class: "btn btn-success" %>
      </div>
    </div>

    <div class="row ml-2">
      <table class="table table-bordered col-9">
        <tr>
          <th class="table-secondary col-3">氏名</th>
          <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
        </tr>

        <tr>
          <th class="table-secondary col-3">カナ</th>
          <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
        </tr>

        <tr>
          <th class="table-secondary col-3">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th class="table-secondary col-3">住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th class="table-secondary col-3">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>


        <tr>
          <th class="table-secondary col-3">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

      </table>
    </div>

    <div class="row ml-2 align-items-center">
      <p class="mb-0"><strong>配送先</strong></label>
      <div class="col p-2 ml-3">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="row ml-2 align-items-center mb-3">
      <p class="mb-0"><strong>注文履歴</strong></label>
      <div class="col p-2">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
      </div>
    </div>

</div>