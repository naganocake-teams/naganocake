<h1>マイページ</h1>

<div class="box">
 <label><strong>登録情報</strong></label>
 <%= link_to edit_infomation_path do %>
   <bottun>編集する</bottun>
 <% end %>
</div>

<div>
  <table>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %> <%= @customer.last_name %></td>
    </tr>

    <tr>
      <td>カナ</td>
      <td><%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
    </tr>

    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>

    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>

    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>


    <tr>
       <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>

    <tr>
       <td>メールアドレス</td>
       <% if @customer.is_deleted == false %>
         <td>
           有効
         </td>
       <% else%>
          <td>
           退会
         </td>
       <% end %>

    </tr>

  </table>
</div>

<div class="box">
 <label><strong>配送先</strong></label>
 <%= link_to addresses_path do %>
   <bottun>一覧を見る</bottun>
 <% end %>
</div>

<div class="box">
 <label><strong>注文履歴</strong></label>
  <%= link_to orders_path do %>
   <bottun>一覧を見る</bottun>
  <% end %>
</div>