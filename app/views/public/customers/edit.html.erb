<div class="container">
  <h6 class=" offset-1 my-4"><strong class="px-3" style="background-color: #dcdcdc">会員情報編集</strong></h6>

  <%= form_with model: @customer,url: update_infomation_path, method: :patch do |f| %>

    <div class="row ml-5 mb-2">
      <%= f.label  "氏名", class: "col-form-label col-2 mr-2"  %>
      <%= f.text_field :first_name, autofocus: true, class: "col-3 form-control mr-4" %>
      <%= f.text_field :last_name, class: "col-3 form-control"  %>
    </div>

    <div class="row ml-5 mb-2">
      <%= f.label  "フリガナ", class: "col-form-label col-2 mr-2"  %>
      <%= f.text_field :first_name_kana, class: "col-3 form-control mr-4"%>
      <%= f.text_field :last_name_kana, class: "col-3 form-control"  %>
    </div>

    <div class="row ml-5 mb-2">
      <%= f.label "郵便番号", class: "col-form-label col-2 mr-2"  %>
      <%= f.text_field :postal_code, class: "col-3 form-control mr-4" %>
    </div>

    <div class="row ml-5 mb-2">
      <%= f.label "住所", class: "col-form-label col-2 mr-2"  %>
      <%= f.text_field :address, class: "col-5 form-control mr-4" %>
    </div>

    <div class="row ml-5 mb-2">
      <%= f.label  "電話番号", class: "col-form-label col-2 mr-2"  %>
      <%= f.text_field :telephone_number, class: "col-3 form-control mr-4"%>
    </div>

    <div class="row ml-5 mb-4">
      <%= f.label  "メールアドレス", class: "col-form-label col-2 mr-2"  %>
      <%= f.email_field :email, class: "col-3 form-control mr-4" %>
    </div>

    <div class="row ml-5 mb-4">
      <%= f.submit "編集内容を保存", class: "btn btn-success col-3 offset-2" %>
      <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger offset-2"  %>
    </div>
  <% end %>

</div>