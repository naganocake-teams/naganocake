<h1>ショッピングカート</h1>

<%= link_to destroy_all_cart_items_path, method: :delete do %>
  <button>カートを空にする</button>
<% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_items| %>
     <tr>
      <td><%= cart_items.item.name %></td>
      <td><%= cart_items.item.with_tax_price %></td>

      <td>

        <%= form_with model: cart_items, url: cart_item_path(cart_items.id), method: :patch do |f| %>

          <%= f.select :amount, *[1..5] %>

          <%= f.submit "変更" %>
        <% end %>

      </td>

      <td><%= cart_items.subtotal %></td>
        <% @sum +=  cart_items.subtotal %>

      <td>
        <%= link_to cart_item_path(cart_items.id), method: :delete do %>
            <button>削除</button>
        <% end %>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to root_path do %>
  <bottun>買い物を続ける</bottun>
<% end %>

<tbale>
  <tr>
    <td>合計金額</td>
    <td><%= @sum %></td>
  </tr>
</tbale>

<%= form_with model: @order, url: orders_path do |f| %>

  <%= f.hidden_field :total_payment, :value => @sum %>

  <%= link_to new_order_path do %>
    <%= f.submit "情報入力画面に進む" %>
  <% end %>

<% end %>